die(){ echo "$*" 2>&1; exit 1; }
position(){
#nbargs
[ $# -eq 2 ] || die "position mot liste_de_mots -> index de mot dans liste de mots (commencant par 1)"
# init vars
local mot="$1"
local liste_mots="$2"
#  la position du mot est le nombre de mots de la liste du d√©but jusque le mot
echo "$liste_mots" |sed  's/'"$mot"'/'"$mot"'\n/ ;' |grep "$mot" |wc --words 
 }
